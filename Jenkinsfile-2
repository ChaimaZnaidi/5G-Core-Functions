pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t my-newman-image .'
                }
            }
        }
        stage('Run Newman Tests') {
            steps {
                script {
                    // Run Newman within Docker container
                    sh 'docker run -v ${WORKSPACE}:/etc/newman --workdir /etc/newman -t my-newman-image run NRF_NF_REGISTER.json --color off --disable-unicode'
                }
            }
        }
    }
}
